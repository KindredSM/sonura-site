</BaseLayout>

<style>
  .legal-hero {
    padding: 180px 24px 80px;
    text-align: center;
    position: relative;
  }

  .legal-hero-inner {
    max-width: 900px;
    margin: 0 auto;
  }

  .legal-headline {
    font-size: clamp(42px, 7vw, 64px);
    line-height: 1.05;
    margin: 0 0 24px;
    letter-spacing: -0.04em;
    font-weight: 700;
    color: var(--fg);
  }

  .legal-subhead {
    font-size: 16px;
    color: var(--muted);
    margin: 0;
  }

  .legal-content {
    padding: 0 24px 120px;
  }

  .legal-content-inner {
    max-width: 800px;
    margin: 0 auto;
  }

  .legal-section {
    margin-bottom: 48px;
    padding-bottom: 48px;
    border-bottom: 1px solid var(--border);
  }

  .legal-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .legal-section h2 {
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 24px;
    color: var(--fg);
    letter-spacing: -0.02em;
  }

  .legal-section h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 32px 0 16px;
    color: var(--fg);
  }

  .legal-section p {
    font-size: 16px;
    color: var(--muted);
    line-height: 1.8;
    margin: 0 0 16px;
  }

  .legal-section p:last-child {
    margin-bottom: 0;
  }

  .legal-section ul {
    margin: 0 0 16px;
    padding-left: 24px;
    color: var(--muted);
  }

  .legal-section li {
    font-size: 16px;
    line-height: 1.8;
    margin-bottom: 8px;
  }

  .legal-section li:last-child {
    margin-bottom: 0;
  }

  .legal-section a {
    color: var(--fg);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .legal-section a:hover {
    color: #fff;
  }

  .legal-section strong {
    color: var(--fg);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .legal-hero {
      padding: 140px 24px 60px;
    }

    .legal-content {
      padding: 0 24px 80px;
    }

    .legal-section {
      margin-bottom: 32px;
      padding-bottom: 32px;
    }
  }
</style>
