---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PricingSection from '../../components/PricingSection.astro';

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "Sonura Pricing",
    "url": "https://sonurastudio.com/pricing/",
    "description": "Sonura pricing plans for AI music generation. Free tier with commercial rights. Starter, Pro, and Studio plans for producers, artists, and creators."
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://sonurastudio.com/" },
      { "@type": "ListItem", "position": 2, "name": "Pricing", "item": "https://sonurastudio.com/pricing/" }
    ]
  },
  {
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "Sonura",
    "applicationCategory": "MusicApplication",
    "operatingSystem": "Web Browser",
    "offers": [
      { "@type": "Offer", "name": "Free", "price": "0", "priceCurrency": "USD", "description": "Free credits, commercial rights, stem export" },
      { "@type": "Offer", "name": "Starter", "price": "9.99", "priceCurrency": "USD", "billingIncrement": "P1M", "description": "200 generations/month" },
      { "@type": "Offer", "name": "Pro", "price": "19.99", "priceCurrency": "USD", "billingIncrement": "P1M", "description": "500 generations/month" },
      { "@type": "Offer", "name": "Studio", "price": "44.99", "priceCurrency": "USD", "billingIncrement": "P1M", "description": "2000 generations/month" }
    ]
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "Is Sonura free?",
        "acceptedAnswer": { "@type": "Answer", "text": "Yes! Sonura offers free credits to get started with no credit card required. The free tier includes full commercial rights and stem export." }
      },
      {
        "@type": "Question",
        "name": "Can I cancel anytime?",
        "acceptedAnswer": { "@type": "Answer", "text": "Yes. All plans are month-to-month with no contracts. Cancel anytime from your account settings." }
      },
      {
        "@type": "Question",
        "name": "Do I own the music I create?",
        "acceptedAnswer": { "@type": "Answer", "text": "Yes. You own 100% of music you generate with Sonura. Full commercial rights on all tiers including free. Release on Spotify, sell beats, use in client work." }
      },
      {
        "@type": "Question",
        "name": "What payment methods do you accept?",
        "acceptedAnswer": { "@type": "Answer", "text": "We accept all major credit cards, debit cards, and payment methods through our secure payment processor." }
      },
      {
        "@type": "Question",
        "name": "Is stem export included on all plans?",
        "acceptedAnswer": { "@type": "Answer", "text": "Yes! Stem export is included on all tiers, including the free tier. Export drums, bass, melody, vocals, and FX separately." }
      }
    ]
  }
];
---

<BaseLayout
  title="Sonura Pricing | AI Music Generator Plans - Free, Starter, Pro, Studio"
  description="Sonura pricing for AI music generation. Start free with commercial rights and stem export. Plans from $9.99/month. No contracts, cancel anytime."
  keywords="sonura pricing, ai music generator pricing, ai beat maker pricing, sonura plans, sonura cost, ai music generator free, sonura free tier"
  canonical="https://sonurastudio.com/pricing/"
  ogTitle="Sonura Pricing - AI Music Generator Plans"
  ogDescription="Start free with commercial rights. Plans from $9.99/month for producers, artists, and creators."
  jsonLd={jsonLd}
>
  <style>
    .compare-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 48px;
    }

    .compare-table th, .compare-table td {
      padding: 16px 20px;
      text-align: left;
      border-bottom: 1px solid rgba(255,255,255,0.08);
    }

    .compare-table th {
      font-weight: 700;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      color: var(--muted);
    }

    .compare-table td { font-size: 15px; }
    .compare-table td:not(:first-child) { text-align: center; }
    .compare-table th:not(:first-child) { text-align: center; }

    @media (max-width: 768px) {
      .compare-table { 
        font-size: 13px; 
      }
      
      .compare-table th, .compare-table td { 
        padding: 10px 8px; 
      }
    }
  </style>

  <div style="max-width: 1600px; margin: 80px auto; padding: 0 24px;">
    <PricingSection showHeader={true} showTrust={false} showSecureBadge={true} />

    <div style="max-width: 900px; margin: 80px auto 0; overflow-x: auto;">
      <h2 style="font-size: 32px; font-weight: 700; margin-bottom: 8px; text-align: center;">Compare Plans</h2>
      <p style="text-align: center; color: var(--muted); margin-bottom: 32px;">All plans include commercial rights and stem export.</p>
      <table class="compare-table">
        <thead>
          <tr>
            <th>Feature</th>
            <th>Starter</th>
            <th>Pro</th>
            <th>Studio</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>Generations</td><td>200/mo</td><td>500/mo</td><td>1000/mo</td></tr>
          <tr><td>Commercial Rights</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td></tr>
          <tr><td>Stem Export</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td></tr>
          <tr><td>AI Mixing</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td></tr>
          <tr><td>Download Quality</td><td>High Quality</td><td>High Quality</td><td>High Quality</td></tr>
          <tr><td>24/7 Support</td><td>-</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td></tr>
          <tr><td>Early Access</td><td>-</td><td style="color: #4ade80;">Yes</td><td style="color: #4ade80;">Yes</td></tr>
          <tr><td>1-on-1 Support Calls</td><td>-</td><td>-</td><td style="color: #4ade80;">Yes</td></tr>
          <tr><td>Custom Features</td><td>-</td><td>-</td><td style="color: #4ade80;">Yes</td></tr>
        </tbody>
      </table>
    </div>

    <section style="max-width: 800px; margin: 80px auto 0;">
      <h2 style="font-size: 32px; font-weight: 700; margin-bottom: 32px; text-align: center;">Pricing FAQ</h2>
      <div>
        <details style="padding: 24px; background: rgba(255,255,255,0.02); border-radius: 12px; cursor: pointer; margin-bottom: 16px;">
          <summary style="font-weight: 700; font-size: 18px;">Is Sonura really free to start?</summary>
          <p style="color: var(--muted); line-height: 1.6; margin-top: 12px;">Yes! Sign up with no credit card and get free credits to create beats, loops, vocals, and more. Full commercial rights and stem export included on the free tier.</p>
        </details>
        <details style="padding: 24px; background: rgba(255,255,255,0.02); border-radius: 12px; cursor: pointer; margin-bottom: 16px;">
          <summary style="font-weight: 700; font-size: 18px;">Can I cancel anytime?</summary>
          <p style="color: var(--muted); line-height: 1.6; margin-top: 12px;">Yes. All plans are month-to-month with no contracts or commitments. Cancel from your account settings at any time.</p>
        </details>
        <details style="padding: 24px; background: rgba(255,255,255,0.02); border-radius: 12px; cursor: pointer; margin-bottom: 16px;">
          <summary style="font-weight: 700; font-size: 18px;">Do I own the music I create?</summary>
          <p style="color: var(--muted); line-height: 1.6; margin-top: 12px;">Yes. You own 100% of all music generated with Sonura. Full commercial rights on all tiers including free. Release on Spotify, sell beats, use in client work, sync to video - no restrictions.</p>
        </details>
        <details style="padding: 24px; background: rgba(255,255,255,0.02); border-radius: 12px; cursor: pointer; margin-bottom: 16px;">
          <summary style="font-weight: 700; font-size: 18px;">Is stem export included on all plans?</summary>
          <p style="color: var(--muted); line-height: 1.6; margin-top: 12px;">Yes! Stem export is available on all tiers including free. Export individual drums, bass, melody, vocals, and FX stems in high quality.</p>
        </details>
        <details style="padding: 24px; background: rgba(255,255,255,0.02); border-radius: 12px; cursor: pointer; margin-bottom: 16px;">
          <summary style="font-weight: 700; font-size: 18px;">What payment methods do you accept?</summary>
          <p style="color: var(--muted); line-height: 1.6; margin-top: 12px;">We accept all major credit cards and debit cards through our secure payment processor.</p>
        </details>
        <details style="padding: 24px; background: rgba(255,255,255,0.02); border-radius: 12px; cursor: pointer; margin-bottom: 16px;">
          <summary style="font-weight: 700; font-size: 18px;">How does Sonura pricing compare to competitors?</summary>
          <p style="color: var(--muted); line-height: 1.6; margin-top: 12px;">Sonura offers more value per dollar than most competitors. Unlike Splice, Suno, and others, Sonura includes full commercial rights and stem export on the free tier. Paid plans start at just $9.99/month.</p>
        </details>
      </div>
    </section>

    <div style="text-align: center; margin-top: 80px; padding: 64px; background: rgba(124, 58, 237, 0.1); border: 2px solid var(--primary); border-radius: 16px;">
      <h2 style="font-size: 36px; font-weight: 700; margin-bottom: 16px;">Start Creating for Free</h2>
      <p style="color: var(--muted); margin-bottom: 32px; font-size: 18px;">No credit card required. Full commercial rights from day one.</p>
      <a href="https://app.sonurastudio.com" style="display: inline-block; padding: 18px 48px; background: var(--primary); color: white; text-decoration: none; border-radius: 12px; font-weight: 700; font-size: 20px;">Get Started Free</a>
    </div>
  </div>
</BaseLayout>
