const examples = [
  { prompt: 'house drum loop 128 bpm four on the floor', description: 'Classic house drum loop with four-on-the-floor kick pattern. Essential for house music production.' },
  { prompt: 'techno synth stab dark industrial', description: 'Dark industrial techno synth stab. Perfect for adding energy and tension to techno tracks.' },
  { prompt: 'edm riser fx build up tension', description: 'Tension-building EDM riser for drops and builds. Essential for creating energy in electronic tracks.' },
  { prompt: 'trance pad ethereal atmospheric', description: 'Ethereal trance pad with atmospheric texture. Great for breakdowns and ambient sections.' },
  { prompt: 'dubstep wobble bass one-shot', description: 'Classic dubstep wobble bass one-shot. Perfect for adding that signature dubstep sound.' },
  { prompt: 'house vocal chop disco style', description: 'Disco-style house vocal chop. Perfect for adding classic house vibes to your tracks.' },
];

const faqs = [
  { question: 'What electronic music genres does Sonura support?', answer: 'Sonura supports all electronic genres: house, techno, trance, dubstep, future bass, progressive house, deep house, tech house, and more. Just specify the genre in your prompt.' },
  { question: 'Can I use these samples in tracks I release?', answer: 'Yes! All samples are 100% royalty-free with full commercial rights. Release on Spotify, SoundCloud, Beatport, or anywhere else. Keep 100% of your royalties.' },
  { question: 'How is this different from electronic sample packs?', answer: 'Sample packs are pre-made and overused by thousands of producers. Sonura generates completely original samples on-demand. Every sample is unique and tailored to your exact specifications.' },
  { question: 'Can I generate specific BPM samples?', answer: 'Yes! Specify BPM in your prompt: "house loop 128 bpm" or "techno beat 140 bpm". The AI will match the tempo you need.' },
  { question: 'What types of electronic samples can I generate?', answer: 'Generate loops (drums, synths, bass), one-shots (kicks, snares, claps, stabs), FX (risers, drops, impacts, sweeps), and vocal chops. Any sample you can describe.' },
  { question: 'Can I export stems for mixing?', answer: 'Yes! Export individual stems for each sample. Perfect for mixing, layering, and building complex arrangements in Ableton, FL Studio, or any DAW.' },
  { question: 'Are the samples production-ready?', answer: 'Yes! All samples are studio-quality and production-ready. Use them as-is or process them further with effects and mixing. Professional-grade output.' },
];

const trustItems = ['100% commercial rights', 'Unique AI-generated samples', 'Export stems included'];
---

