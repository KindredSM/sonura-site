</div>

<script>
  const currentInterval = { value: 'month' };

  document.querySelectorAll('.billing-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.billing-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      currentInterval.value = btn.dataset.interval;
      
      document.querySelectorAll('.price-amount').forEach(amount => {
        const price = currentInterval.value === 'month' ? amount.dataset.monthly : amount.dataset.annual;
        amount.textContent = price;
      });

      document.querySelectorAll('.monthly-equivalent').forEach(equiv => {
        if (currentInterval.value === 'year') {
          equiv.style.display = 'block';
          equiv.textContent = equiv.dataset.annualText;
        } else {
          equiv.style.display = 'none';
        }
      });
    });
  });

  document.querySelectorAll('[data-plan]').forEach(btn => {
    btn.addEventListener('click', () => {
      const plan = btn.dataset.plan;
      const interval = currentInterval.value;
      
      window.location.href = `https://app.sonurastudio.com?subscribe=${plan}&interval=${interval}`;
    });
  });
</script>

<style>
  .pricing-section-wrapper {
    width: 100%;
  }

  .pricing-header-section {
    text-align: center;
    margin-bottom: 48px;
  }

  .pricing-title {
    font-size: 48px;
    font-weight: 800;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .pricing-subtitle {
